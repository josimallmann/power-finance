<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00796B"
        app:title="Recuperar Senha"
        app:titleTextColor="#FFFFFF"
        android:elevation="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/logo"
                android:contentDescription="Logo do Aplicativo"
                android:layout_marginBottom="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informe seu e-mail para enviar as instruções de recuperação"
                android:textSize="18sp"
                android:textColor="#00796B"
                android:textAlignment="center"
                android:layout_marginBottom="32dp" />

            <EditText
                android:id="@+id/etRecoveryEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Email"
                android:textColorHint="#00796B"
                android:background="@drawable/rounded_input"
                android:padding="16dp"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="32dp"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="12dp" />

            <Button
                android:id="@+id/btnRecover"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Enviar Instruções"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:background="@drawable/rounded_button" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
